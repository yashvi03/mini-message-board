<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <a href="/new">Add a New Message</a>
    <ul>
        <% messages.forEach(function(message) { %>
            <li>
                <strong><%= message.user %>:</strong> <%= message.text %> <em>(<%= message.added.toLocaleString() %>)</em>
            </li>
        <% }) %>
    </ul>
</body>
</html>
